<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="d2_client_twitter.class">Desarrolla2\Bundle\TwitterClientBundle\Service\TwitterClient</parameter>
    </parameters>

    <services>
        <service id="d2_client_twitter" class="%d2_client_twitter.class%">
            
            <call method="setProvider">
                <argument type="service" id="d2_client_rss"/>
            </call>
            
            <call method="setScreenName">
                <argument>%d2_client_twitter.screen_name%</argument>
            </call>
            
        </service>
    </services>
</container>
