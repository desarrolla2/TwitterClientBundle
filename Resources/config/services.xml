<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twitter_client.class">Desarrolla2\Bundle\TwitterClientBundle\Service\TwitterClient</parameter>
    </parameters>

    <services>
        <service id="d2.client.twitter" class="%twitter_client.class%">
            <call method="setClient">
                <argument type="service" id="d2.client.rss"/>
            </call>
            <call method="setScreenName">
                <argument>%d2.client.twitter.screen_name%</argument>
            </call>
            <call method="setSearchQuery">
                <argument>%d2.client.twitter.search_query%</argument>
            </call>
        </service>
    </services>
</container>
