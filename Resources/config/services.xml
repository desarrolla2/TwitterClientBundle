<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twitter_client.class">Desarrolla2\Bundle\TwitterClientBundle\Service\TwitterClient</parameter>
    </parameters>

    <services>
        <service id="twitter_client" class="%twitter_client.class%">
            
            <call method="setProvider">
                <argument type="service" id="rss_client"/>
            </call>
            
            <call method="setScreenName">
                <argument>%twitter_client.screen_name%</argument>
            </call>
            
        </service>
    </services>
</container>
